{
  "$id": "formulas.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Formulas",
  "description": "Schema for soap recipe builder formulas and calculations documentation",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/Formula"
  },
  "definitions": {
    "Formula": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string",
          "enum": ["core", "properties", "optimization"],
          "description": "Category of the formula"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name for the formula"
        },
        "summary": {
          "type": "string",
          "minLength": 1,
          "description": "Brief one-line summary"
        },
        "userFriendly": {
          "type": "string",
          "minLength": 1,
          "description": "User-friendly explanation for beginners"
        },
        "formula": {
          "type": "string",
          "minLength": 1,
          "description": "The mathematical formula"
        },
        "variables": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Variable definitions"
        },
        "example": {
          "type": "object",
          "properties": {
            "scenario": {
              "type": "string",
              "description": "Description of the example scenario"
            },
            "steps": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Step-by-step calculation"
            }
          },
          "required": ["scenario", "steps"]
        },
        "technical": {
          "type": "string",
          "description": "Technical details for advanced users"
        },
        "references": {
          "type": "array",
          "description": "Academic or scientific references for this formula",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "sourceId": {
                "type": "string",
                "minLength": 1,
                "description": "ID of source in sources.json"
              },
              "section": {
                "type": "string",
                "description": "Specific section, chapter, or article identifier"
              },
              "url": {
                "type": "string",
                "format": "uri",
                "description": "Direct URL to the referenced content"
              },
              "note": {
                "type": "string",
                "description": "Additional context about this specific reference"
              }
            },
            "required": ["sourceId", "section"]
          }
        },
        "recommendedRange": {
          "type": "object",
          "properties": {
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          }
        },
        "related": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Related glossary terms"
        },
        "learnMore": {
          "type": "object",
          "description": "Link to external educational resource for deeper learning",
          "properties": {
            "text": {
              "type": "string",
              "minLength": 1,
              "description": "Display text for the learn more link"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "URL to the educational resource"
            }
          },
          "required": ["text", "url"],
          "additionalProperties": false
        }
      },
      "required": ["category", "name", "summary", "userFriendly", "formula", "variables"],
      "additionalProperties": false
    }
  }
}
