{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "glossary.schema.json",
  "title": "Soap Making Glossary",
  "description": "Schema for glossary terms and definitions",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/Term"
  },
  "definitions": {
    "Term": {
      "type": "object",
      "required": ["term", "category", "desc"],
      "properties": {
        "term": {
          "type": "string",
          "description": "Display name for the term",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "description": "Classification of the term",
          "enum": ["property", "concept", "calculation", "additive"]
        },
        "desc": {
          "type": "string",
          "description": "Short description",
          "minLength": 1
        },
        "details": {
          "type": "string",
          "description": "Extended explanation with examples and ranges"
        },
        "related": {
          "type": "array",
          "description": "Keys of related glossary terms",
          "items": { "type": "string" }
        },
        "ranges": {
          "type": "object",
          "description": "Structured range values for property terms",
          "properties": {
            "min": {
              "type": "number",
              "description": "Minimum recommended value"
            },
            "max": {
              "type": "number",
              "description": "Maximum recommended value"
            },
            "ideal": {
              "type": "object",
              "description": "Ideal range within the min/max bounds",
              "properties": {
                "min": { "type": "number" },
                "max": { "type": "number" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
