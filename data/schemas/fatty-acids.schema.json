{
  "$id": "fatty-acids.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": {
    "$ref": "#/definitions/FattyAcid"
  },
  "definitions": {
    "FattyAcid": {
      "additionalProperties": false,
      "properties": {
        "carbonChain": {
          "description": "Number of carbon atoms",
          "maximum": 30,
          "minimum": 1,
          "type": "integer"
        },
        "commonSources": {
          "description": "Oils/fats that contain this fatty acid",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "description": {
          "description": "Additional notes about this fatty acid",
          "type": "string"
        },
        "formula": {
          "description": "Chemical formula notation (e.g., C12:0, C18:1)",
          "type": "string"
        },
        "meltingPoint": {
          "description": "Melting point in Celsius",
          "type": "number"
        },
        "name": {
          "description": "Full name of the fatty acid",
          "type": "string"
        },
        "references": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "section": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "url": {
                "format": "uri",
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "saturation": {
          "description": "Saturation level",
          "enum": [
            "saturated",
            "monounsaturated",
            "polyunsaturated",
            "monounsaturated (hydroxylated)"
          ],
          "type": "string"
        },
        "soapProperties": {
          "additionalProperties": false,
          "description": "Qualitative soap property contributions",
          "properties": {
            "cleansing": {
              "type": "string"
            },
            "conditioning": {
              "type": "string"
            },
            "hardness": {
              "type": "string"
            },
            "lather": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "name",
        "formula",
        "carbonChain",
        "saturation",
        "meltingPoint",
        "soapProperties",
        "description",
        "commonSources"
      ],
      "type": "object"
    }
  },
  "description": "Schema for fatty acid definitions",
  "title": "Fatty Acids Database",
  "type": "object"
}
