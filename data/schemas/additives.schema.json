{
  "$id": "additives.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": {
    "$ref": "#/definitions/Additive"
  },
  "definitions": {
    "Additive": {
      "additionalProperties": false,
      "properties": {
        "anchoring": {
          "description": "Additive IDs that help anchor this scent (essential oils only)",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "category": {
          "description": "Primary additive category",
          "enum": [
            "essential-oil",
            "colourant",
            "functional"
          ],
          "type": "string"
        },
        "color": {
          "description": "Hex colour code for visual reference (colourants only)",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "type": "string"
        },
        "density": {
          "description": "Density in g/mL",
          "maximum": 6,
          "minimum": 0.5,
          "type": "number"
        },
        "description": {
          "description": "Factual description of the additive",
          "minLength": 1,
          "type": "string"
        },
        "dietary": {
          "additionalProperties": false,
          "description": "Dietary and ethical classification flags",
          "properties": {
            "animalBased": {
              "description": "True if derived from animal sources",
              "type": "boolean"
            },
            "ethicalConcerns": {
              "description": "True if there are significant ethical concerns",
              "type": "boolean"
            }
          },
          "type": "object"
        },
        "name": {
          "description": "Display name of the additive",
          "minLength": 1,
          "type": "string"
        },
        "references": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "section": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "url": {
                "format": "uri",
                "type": "string"
              }
            },
            "required": [
              "source",
              "section",
              "url"
            ],
            "type": "object"
          },
          "minItems": 1,
          "type": "array"
        },
        "safety": {
          "additionalProperties": false,
          "description": "Safety and regulatory information",
          "properties": {
            "casNumber": {
              "description": "CAS registry number",
              "pattern": "^[0-9]+-[0-9]+-[0-9]+$",
              "type": "string"
            },
            "cosIng": {
              "description": "EU CosIng CI number",
              "type": "string"
            },
            "fdaCfr": {
              "description": "FDA CFR reference (e.g., 21 CFR 73.2250)",
              "type": "string"
            },
            "fdaGras": {
              "description": "FDA Generally Recognized As Safe",
              "type": "boolean"
            },
            "flashPointC": {
              "description": "Flash point in Celsius",
              "type": "number"
            },
            "ifraCategory9Limit": {
              "description": "IFRA max % for Category 9 (rinse-off products)",
              "maximum": 100,
              "minimum": 0,
              "type": "number"
            },
            "majorConstituents": {
              "description": "Primary chemical constituents",
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "maxConcentration": {
              "description": "Maximum safe concentration %",
              "maximum": 100,
              "minimum": 0,
              "type": "number"
            }
          },
          "type": "object"
        },
        "scentNote": {
          "description": "Fragrance note classification (essential oils only)",
          "enum": [
            "top",
            "middle",
            "base"
          ],
          "type": "string"
        },
        "subcategory": {
          "description": "Sub-classification (e.g., clay, mica, oxide, hardener)",
          "type": "string"
        },
        "usage": {
          "additionalProperties": false,
          "description": "Recommended usage range",
          "properties": {
            "basis": {
              "description": "What the percentage is calculated from",
              "enum": [
                "oil-weight",
                "batch-weight"
              ],
              "type": "string"
            },
            "max": {
              "maximum": 100,
              "minimum": 0,
              "type": "number"
            },
            "min": {
              "maximum": 100,
              "minimum": 0,
              "type": "number"
            }
          },
          "required": [
            "min",
            "max",
            "basis"
          ],
          "type": "object"
        }
      },
      "required": [
        "name",
        "category",
        "usage",
        "description",
        "references"
      ],
      "type": "object"
    }
  },
  "description": "Schema for soap additives including essential oils, colourants, and functional additives",
  "title": "Soap Additives Database",
  "type": "object"
}
