{
  "$id": "soap-performance.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Soap Performance Additives Database",
  "description": "Schema for soap performance additives (hardeners, lather enhancers, antioxidants)",
  "additionalProperties": {
    "$ref": "#/definitions/SoapPerformanceAdditive"
  },
  "definitions": {
    "SoapPerformanceAdditive": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Display name of the additive",
          "minLength": 1,
          "type": "string"
        },
        "type": {
          "description": "Type classification",
          "const": "soap performance",
          "type": "string"
        },
        "description": {
          "description": "Factual description of the additive",
          "minLength": 1,
          "type": "string"
        },
        "details": {
          "description": "Technical details for the additive",
          "additionalProperties": false,
          "properties": {
            "subcategory": {
              "description": "Functional sub-classification",
              "enum": ["hardener", "lather-enhancer", "antioxidant"],
              "type": "string"
            },
            "density": {
              "description": "Density in g/mL",
              "maximum": 6,
              "minimum": 0.1,
              "type": "number"
            },
            "safety": {
              "$ref": "common-definitions.schema.json#/definitions/safety"
            },
            "usage": {
              "$ref": "common-definitions.schema.json#/definitions/usage"
            },
            "sourcing": {
              "$ref": "common-definitions.schema.json#/definitions/sourcing"
            }
          },
          "required": ["subcategory", "usage", "sourcing"],
          "type": "object"
        },
        "dietary": {
          "$ref": "common-definitions.schema.json#/definitions/dietary"
        },
        "ethicalConcerns": {
          "$ref": "common-definitions.schema.json#/definitions/ethicalConcerns"
        },
        "references": {
          "$ref": "common-definitions.schema.json#/definitions/references"
        }
      },
      "required": ["name", "type", "description", "details", "ethicalConcerns"],
      "type": "object"
    }
  },
  "type": "object"
}
